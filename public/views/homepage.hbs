<!DOCTYPE html>
<html lang="en" ng-app="empty_desks">
<head>
  <meta charset="UTF-8">
  <title>Empty Desks</title>
  <script src="../libs/jquery/dist/jquery.min.js"></script>
  <script src="../libs/angular/angular.min.js"></script>
  <script src="../libs/angular-route/angular-route.min.js"></script>
  <script src="../libs/angular-resource/angular-resource.min.js"></script>

  <script src="../js/app.js"></script>
  <script src="../js/controllers/desks.js"></script>
  <script src="../js/controllers/users.js"></script>
  <script src="../js/services/desk.js"></script>
  <script src="../js/services/user.js"></script>
  <script src="../js/routes.js"></script>
  <script src="../js/userRoutes.js"></script>
  <script src="../js/directives/deskDirective.js"></script>
  <script src="../js/jquery.js"></script>

  <link href='https://fonts.googleapis.com/css?family=Lora' rel='stylesheet' type='text/css'>

  <link rel="stylesheet" href="../css/style.css">
</head>
<body>
  <div id="nav_bar">
    <div class="column-4">
      <div id="left_container">
        {{#if user}}
          <div id="user_box">
            {{#if user.avatar_url}}
              <div id="user_image"><img class="avatar" src="{{user.avatar_url}}"></div>
            {{else}}
              {{#if user.firstName}}
                <div id="user_letter">{{firstLetter user.firstName}}</div>
              {{else}}
                <div id="user_letter">{{firstLetter user.username}}</div>
              {{/if}}
            {{/if}}
            {{#if user.firstName}}
              <div id="user_name">{{maxSize user.firstName}}</div>
            {{else}}
              <div id="user_name">{{maxSize user.username}}</div>
            {{/if}}
          </div>
          <div id="new_desk_button">
            <a class="link" href="/#/desks/new">+</a>
          </div>
          <div id="user_dropdown">
            <div class="dropdown_option"><a class = "dropdown_link" href="/#/">Home</a></div>
            <div class="dropdown_option"><a class= "dropdown_link" href="/#/profile">Profile</a></div>
            <div class="dropdown_option"><a class="dropdown_link" href="/#/desks">Desks</a></div>
            <div class="dropdown_option"><a class="dropdown_link" href="/#/calendar">Calendar</a></div>
            <div class="dropdown_option"><a class="dropdown_link" href="/logout">Sign Out</a></div>
          </div>
        {{else}}
          <div id="user_box">
            <div id="sign_in"><a href="/signin">Sign In</a></div>
          </div>
        {{/if}}
      </div>
    </div>
    <div class="column-4">
      <div id="logo_container">
        <a ng-href="#/"><img id="logo" src="../images/logo_empty_desks.png" alt="Empty Desks" /></a>
      </div>
    </div>
    <div class="column-4">
      <div class="flexsearch">
    		<div class="flexsearch--wrapper">
    			<form class="flexsearch--form" action="#" method="post">
    				<div class="flexsearch--input-wrapper">
    					<input class="flexsearch--input" type="search" placeholder="search">
    				</div>
    				<input class="flexsearch--submit" type="submit" value="&#10140;"/>
    			</form>
    		</div>
      </div>
    </div>
  </div>
  {{#if user}}
    <div ng-view></div>
  {{/if}}
</body>
</html>
